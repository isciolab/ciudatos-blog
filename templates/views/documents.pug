extends ../layouts/default

mixin documentcard(document)
	.col-md-4.col-sm-6: .document-item
		img.img-responsive(src=`${document._.image.pad(250, 250)}`, alt="" style="margin: 0 auto")
		.document-info.text-size-large.text-color-white.hind= document.title
		a.document-url.text-size-x-large.anchor.anchor-white(href="ciudatos/documents/"`${document.file.filename}` target="_blank" rel="noopener noreferrer") PDF

block css
	style.
		.document-item {
			margin-bottom: 30px;
			box-shadow: 0px 2px 2px rgba(20,20,20,0.8);
			font-size: 18px;
			position: relative;
		}
		.document-item:before {
			background: rgba(38, 50, 126, 0.3);
			content: '';
			height: 100%;
			left: 0;
			position: absolute;
			top: 0;
			width: 100%;
		}
		.col-md-4.col-sm-6:nth-last-child(-n+1) .document-item {
			margin-bottom: 0;
		}
block content
	.container-fluid(style="padding-top: 15px;padding-bottom: 15px;")
		.row
			each document,i in data.documents
				+documentcard(document)

block js
	script(src="/js/margin.js")